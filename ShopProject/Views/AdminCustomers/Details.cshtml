@model ShopProject.Models.Shop.Customer

@{
    ViewData["Title"] = "Member Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<main role="main" class="pl-1 pr-1">
    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <h2 style="text-align: center;margin-top:20px;">Member Details</h2>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
    <hr />

    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-7">
                <div class="card" style="width: 100%; margin:40px 0 40px 0;">
                    <div class="card-body">
                        <p class="card-text">
                            <dl class="row" style="margin-bottom: 40px;">
                                <dt class="col-md-6">
                                    Member Name
                                </dt>
                                <dd class="col-md-6">
                                    @Html.DisplayFor(model => model.Name)
                                </dd>
                                <dt class="col-md-6">
                                    Member Email
                                </dt>
                                <dd class="col-md-6">
                                    @Html.DisplayFor(model => model.Email)
                                </dd>
                                <dt class="col-md-6">
                                    Member Password
                                </dt>
                                <dd class="col-md-6">
                                    @Html.DisplayFor(model => model.Password)
                                </dd>
                                <dt class="col-md-6">
                                    Member Address
                                </dt>
                                <dd class="col-md-6">
                                    @Html.DisplayFor(model => model.Address)
                                </dd>
                                <dt class="col-md-6">
                                    Member Phone
                                </dt>
                                <dd class="col-md-6">
                                    @Html.DisplayFor(model => model.Phone)
                                </dd>
                                <dt class="col-md-6">
                                    Member Birthday
                                </dt>
                                <dd class="col-md-6">
                                    @Html.DisplayFor(model => model.Birthday)
                                </dd>
                                <dt class="col-md-6">
                                    Administrator Permission
                                </dt>
                                <dd class="col-md-6">
                                    @Html.DisplayFor(model => model.Admin)
                                   
                                </dd>
                            </dl>
                        </p>
                        <p>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-dark">Edit</a>&nbsp;&nbsp;&nbsp;
                            <a asp-action="Index" class="btn btn-outline-dark">Back To List</a>
                        </p>
                    </div>
                </div>
                <div class="col-md-3"></div>
            </div>
        </div>
    </div>
</main>



