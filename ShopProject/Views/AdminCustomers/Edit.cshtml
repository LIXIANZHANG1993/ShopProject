@model ShopProject.Models.Shop.Customer

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<main role="main" class="pl-1 pr-1">
    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <h2 style="text-align: center;margin-top:20px;">Member Edit</h2>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>

    <hr />
    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <form asp-action="Edit" >

                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label class="control-label" asp-for="Name">Member Name</label>
                        <input class="form-control" asp-for="Name"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email">Member Email</label>
                        <input class="form-control" asp-for="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="Password">Member Password</label>
                        <input class="form-control" asp-for="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Address" class="control-label">Member Address</label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone" class="control-label">Member Phone</label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Birthday" class="control-label">Member Birthday</label>
                        <input asp-for="Birthday" class="form-control" />
                        <span asp-validation-for="Birthday" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label" value="Administrator Permission">
                            <input class="form-check-input" asp-for="Admin" /> @Html.DisplayNameFor(model => model.Admin)
                        </label>
                    </div>
                    <div class="form-group admin-member-edit-btn" style="margin-top: 40px;">
                        <input type="submit" value="Save" class="btn btn-outline-dark" />&nbsp;&nbsp;&nbsp;&nbsp;
                        <a asp-action="Index" class="btn btn-outline-dark">Back To List</a>
                    </div>
