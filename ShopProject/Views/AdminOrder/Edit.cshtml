@model ShopProject.Models.Shop.Order

@{
    ViewData["Title"] = "Admin OrderEdit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}




<main role="main" class="pl-1 pr-1">
    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <h2 style="text-align: center;  margin-top:20px;">Order Edit</h2>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>

    <hr />
    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <form asp-controller="AdminOrder" asp-action="Edit" asp-route-id="@Model.Id" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="PurchaseId" class="control-label">Purchase Id</label>
                        <input asp-for="PurchaseId" class="form-control" value="@Model.PurchaseId" />
                        <span asp-validation-for="PurchaseId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ProductModel" class="control-label">Product Model</label>
                        <input asp-for="ProductModel" class="form-control" />
                        <span asp-validation-for="ProductModel" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="Amount" class="control-label">Amount</label>
                        <input asp-for="Amount" class="form-control" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Price</label>
                        <input value="@(Model.Price/Model.Amount)" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Price" class="control-label">Total Price</label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group admin-order-edit-btn">
                        <input type="submit" value="Save" class="btn btn-outline-dark" />&nbsp;&nbsp;&nbsp;&nbsp;
                        <a asp-controller="AdminPurchase" asp-action="Details" asp-route-id="@Model.PurchaseId" class="btn btn-outline-dark">Back To List</a>
                    </div>
                </form>
            </div>
        </div>

</main>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}