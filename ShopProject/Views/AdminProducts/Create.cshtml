@model ShopProject.Models.Shop.Product

@{
    ViewData["Title"] = "Product Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}




<main role="main" class="pl-1 pr-1">
    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <h2 style="text-align: center;  margin-top:20px;"> New Product</h2>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>

    <hr />
    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Product Name</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Model" class="control-label">Product Model</label>
                        <input asp-for="Model" class="form-control" value="@ViewBag.newModel" readonly="readonly" style=" background-color:white;
}" />
                        <span asp-validation-for="Model" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label">Product Price</label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CreationDate" class="control-label">Launch Time</label>
                        <input asp-for="CreationDate" class="form-control" />
                        <span asp-validation-for="CreationDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TypeId" class="control-label">Pruduct Type</label>
                        <select asp-for="TypeId" class="form-control" asp-items="ViewBag.TypeId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Inventory" class="control-label">Inventory</label>
                        <input asp-for="Inventory" class="form-control" />
                        <span asp-validation-for="Inventory" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ImgUrl" class="control-label">Product Image</label>
                        <input asp-for="ImgUrl" class="form-control" type="file" />
                        <span asp-validation-for="ImgUrl" class="text-danger"></span>
                        @*<span class="button-wrapper">
            <span class="admin-product-creation-img-label">Upload Image</span>
                <input type="file" name="upload" id="upload" class="upload-box"
                    placeholder="Upload File">
            </span>*@
                    </div>
                    <div class="form-group admin-product-creation-btn" style="margin-top: 40px;">
                        <input type="submit" value="Create" class="btn btn-outline-dark" />&nbsp;&nbsp;&nbsp;&nbsp;
                        <a asp-action="Index" class="btn btn-outline-dark">Back to List</a>
                    </div>
                </form>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
</main>



@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
