@model ShopProject.Models.Shop.Product

@{
    ViewData["Title"] = "Product Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<main role="main" class="pl-1 pr-1">
    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <h2 style="text-align: center; margin-top:20px;">Product Details</h2>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
    <hr />
    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="card" style="width: 100%; margin:40px 0 40px 0;">
                    <div class="card-body">
                        <p class="card-text">
                            <dl class="row" style="margin-bottom: 40px;">
                                <dt class="col-md-4">
                                    Product Name
                                </dt>
                                <dd class="col-md-8">
                                    @Html.DisplayFor(model => model.Name)
                                </dd>
                                <dt class="col-md-4">
                                    Product Model
                                </dt>
                                <dd class="col-md-8">
                                    @Html.DisplayFor(model => model.Model)
                                </dd>
                                <dt class="col-md-4">
                                    Product Price
                                </dt>
                                <dd class="col-md-8">
                                    @Html.DisplayFor(model => model.Price)
                                </dd>
                                <dt class="col-md-4">
                                    Product Launch
                                </dt>
                                <dd class="col-md-8">
                                    @Html.DisplayFor(model => model.CreationDate)
                                </dd>
                                <dt class="col-md-4">
                                    Product Image
                                </dt>
                                <dd class="col-md-8">
                                    @Html.DisplayFor(model => model.ImgUrl)
                                </dd>
                                <dt class="col-md-4">
                                    Pruduct Type
                                </dt>
                                <dd class="col-md-8">
                                    @Html.DisplayFor(model => model.Type.Name)
                                </dd>
                                <dt class="col-md-4">
                                    Inventory
                                </dt>
                                <dd class="col-md-8">
                                    @Html.DisplayFor(model => model.Inventory)
                                </dd>
                            </dl>
                        </p>
                        <p>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-dark">Edit</a>&nbsp;&nbsp;&nbsp;
                            <a asp-action="Index" class="btn btn-outline-dark">Back To List</a>
                        </p>
                    </div>
                </div>
                <div class="col-md-3"></div>
            </div>
        </div>

</main>






