                                <div class="card-footer text-muted">
                                    <span>
                                        <a asp-action="Edit" asp-route-id="@item3.Id" class="btn btn-outline-dark">Edit</a>&nbsp;
                                        <a asp-action="Details" asp-route-id="@item3.Id" class="btn btn-outline-dark">Details</a>&nbsp;
                                        <a asp-action="Delete" asp-route-id="@item3.Id" class="btn btn-outline-danger">Delete</a>
                                    </span>
                                </div>
                            </div>
                        }
                    }

                </div>
            </div>


            <div class="tab-pane fade" id="Accessories" role="tabpanel" aria-labelledby="Accessories-tab">
                <div class="container admin-product-list-container">
                    @foreach (var item4 in Model)
                    {
                        if (item4.TypeId == 4)
