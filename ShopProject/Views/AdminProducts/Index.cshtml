                                            <tr>
                                                <td>Photo Path</td>
                                                <td>@item2.ImgUrl</td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>


                                <div class="card-footer text-muted">
                                    <span>
                                        <a asp-action="Edit" asp-route-id="@item2.Id" class="btn btn-outline-dark">Edit</a>&nbsp;
                                        <a asp-action="Details" asp-route-id="@item2.Id" class="btn btn-outline-dark">Details</a>&nbsp;
                                        <a asp-action="Delete" asp-route-id="@item2.Id" class="btn btn-outline-danger">Delete</a>
                                    </span>
                                </div>
                            </div><!-- 灰色花邊寬褲 card 結束 -->
                        }
                    }
                </div><!-- 下身類 card 結束 -->
            </div><!-- Bottom 頁簽 結束 -->



            <div class="tab-pane fade " id="Shoes" role="tabpanel" aria-labelledby="Shoes-tab">
