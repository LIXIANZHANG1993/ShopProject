
@model ShopProject.Models.Shop.Customer


@{
    ViewData["Title"] = "SignUp";
}

<section id="login">
    <div class="container">
        <div class="row">
            <div class="col-md-7 col-layout d-flex justify-content-center align-items-center w-100 ">
                <img src="~/images/joinus.jpg" width="100%">

            </div>
            <div class="col-md-5">
                <div class="row row-special d-flex justify-content-center">
                    <h2 style="font-family: 'Covered By Your Grace', monospace; font-size: 70px;margin-top:20px">Join Us!</h2>
                </div>
                <div class="row row-special2">
                    <div class="container con-layout">
                        <h3 class="title"style="font-family: 'Covered By Your Grace', monospace; margin-top:40px;font-size:35px"><b>Create your account</b></h3>
                        <!--這裡新增asp helper-->
                        <form asp-controller="Customer" asp-action="Register" method="post">
                            <span class="text-danger" style="font-family: 'Fjalla One', monospace;font-size:15px; ">@TempData["Message"]</span>
                            <div class="form-group" style="font-family: 'Fjalla One', monospace; font-size: 18px">
                                <label asp-for="Name">Name</label>
                                <input asp-for="Name" type="text" class="form-control" id="Name"
                                       placeholder="Name" name="Name"><span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <!--1.這裡的id要打個跟model裡的屬性一樣才會綁定，然後label的名稱也要對應到id。2.type是輸入的格式。3.Name是綁定的 4.asp-for、asp-validation-for以及method="post"以及scrip引入才能在前端驗證-->
                            <div class="form-group" style="font-family: 'Fjalla One', monospace; font-size: 18px">
                                <label asp-for="Email">Email Address</label>
                                <input asp-for="Email" type="email" class="form-control" name="Email" id="Email" aria-describedby="emailHelp" placeholder="Enter Email"><span asp-validation-for="Email" class="text-danger" ></span>
                            </div>

                            <div class="form-group" style="font-family: 'Fjalla One', monospace; font-size: 18px">
                                <label asp-for="Password">Password</label>
                                <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1"
                                       placeholder="Password" name="Password"><span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group" style="font-family: 'Fjalla One', monospace;font-size: 18px">
                                <label asp-for="Phone">Phone number</label>
                                <input asp-for="Phone" type="tel" class="form-control" id="exampleInputPhone1"
                                       placeholder="Phone_number" name="Phone">
                            </div>


                            <small id="emailHelp" class="form-text text-muted" style="font-family: 'Fjalla One', monospace;" >
                                We'll never share your email with
                                anyone else.
                            </small>
                            <button type="submit" class="btn btn-outline-dark btn-3"
                                    style="margin-top: 40px;" >
                                REGISTER
                            </button>
                            <small class="form-text text-muted" style="font-family: 'Fjalla One', monospace;">
                                By creating an account, you agree to the Terms of
                                Service.
                            </small>
                        </form>
                    </div>
                </div>
                <div class="row row-special">
                    <p> </p>
                </div>

            </div>

        </div>
    </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}